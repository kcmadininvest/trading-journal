# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings - PostgreSQL avec schéma dédié
DB_ENGINE=django.db.backends.postgresql
DB_NAME=portfolio
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432
DB_SCHEMA=trading_journal

# Alternative: SQLite pour développement simple
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Configuration email (ex. Brevo)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-brevo-api-key
DEFAULT_FROM_EMAIL=noreply@kctradingjournal.com

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis & Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/1
